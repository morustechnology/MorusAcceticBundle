{% extends '::base.html.twig' %}

{% block body_title -%}
    Transaction list
{% endblock %}

{% block body -%}
    
    
        
    <ul class="page-control">
        <li>
            <a class="loading-btn" href="{{ path('morus_accetic_ar_new') }}">
                {% image '@MorusAcceticBundle/Resources/public/images/icons-pack.png' %}
                <em class="icons add icon" style="background:url('{{ asset_url }}') no-repeat;background-position:0 -50px;" ></em>
                {% endimage %}
                {{ 'btn.new_invoice'|trans }}
            </a>
        </li>
    </ul>
    
    <div class="fullwidth-space"></div>
    
    <table class="records_list ar">
        <thead>
            <tr>
                <th>{{ ('ar.number' |trans)}}</th>
                <th>{{ ('ar.reference' |trans)}}</th>
                <th>{{ ('ar.to' |trans)}}</th>
                <th>{{ ('ar.date' |trans)}}</th>
                <th>{{ ('ar.due_date' |trans)}}</th>
                <th>{{ ('ar.paid' |trans)}}</th>
                <th>{{ ('ar.due' |trans)}}</th>
                <th>{{ ('ar.status' |trans)}}</th>
                <th>{{ ('ar.sent' |trans)}}</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('morus_accetic_ar_show', { 'id': entity.id }) }}">{{ entity.invnumber }}</a></td>
                <td>{# {{ entity.unit.name }} #}</td>
                <td>{% if entity.transdate %}{{ entity.transdate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>

                <td>
                <ul>
                    <li>
                        <a href="{{ path('morus_accetic_ar_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('morus_accetic_ar_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% endblock %}
