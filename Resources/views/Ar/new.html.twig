        {{ 'ar.customer'|trans }} {{ form_widget(form.ar.unit) }} {{ form_errors(form.ar.unit) }}
        {{ 'ar.invnumber'|trans }} {{ form_widget(form.ar.invnumber) }} {{ form_errors(form.ar.invnumber) }}
        {{ 'ar.transdate'|trans }} {{ form_widget(form.ar.transdate) }} {{ form_errors(form.ar.transdate) }}
        {{ 'ar.duedate'|trans }} {{ form_widget(form.ar.duedate) }} {{ form_errors(form.ar.duedate) }}
        {{ 'ar.reference'|trans }} {{ form_widget(form.ar.reference) }} {{ form_errors(form.ar.reference) }}
        <hr/>
        <div class="transaction-invoices" data-prototype="{{ form_widget(form.invoices.vars.prototype)|e }}" >
            <table>
                <thead>
                    <tr>
                        {{ 'ar.invoice.part'|trans }}
