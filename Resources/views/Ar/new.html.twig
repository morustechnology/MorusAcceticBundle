                    </tr>
                    <tr>
                        {{ 'ar.invoice.sellprice'|trans }}
                    </tr>
                    <tr>
                        {{ 'ar.invoice.discount'|trans }}
                    </tr>
                    <tr>
                        {{ 'ar.invoice.amount'|trans }}
                    </tr>
                </thead>
            </table>
                    
            {{ form_widget(form.invoices) }}
        </div>
            <div>{{ 'ar.subtotal'|trans }} <label id='transaction-subtotal'></label></div>
        <div>{{ 'ar.total'|trans }} <label id='transaction-total'></label></div>
        {{ form_widget(form.submit) }}
        {{ form_rest(form) }}
    {{ form_end(form) }}
    
</div>

    
