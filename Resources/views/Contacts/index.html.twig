{% extends '::base.html.twig' %}

{% block javascripts %}

{% endblock %}

{% block body_title -%}
    {{ 'contact.contacts'|trans }}
{% endblock %}

{% block body -%}
    <ul class="page-control">
        <li>
            <a class="loading-btn" href="{{ path('morus_accetic_contacts_new') }}">
                {% image '@MorusAcceticBundle/Resources/public/images/icons-pack.png' %}
                <em class="icons add icon" style="background:url('{{ asset_url }}') no-repeat;background-position:0 -50px;" ></em>
                {% endimage %}
                {{ 'contact.btn.add_contact'|trans }}
            </a>
        </li>
        <li>
            <a class="loading-btn" href="{{ path('morus_accetic_contacts_new_supplier') }}">
                {% image '@MorusAcceticBundle/Resources/public/images/icons-pack.png' %}
                <em class="icons add icon" style="background:url('{{ asset_url }}') no-repeat;background-position:0 -50px;" ></em>
                {% endimage %}
                {{ 'contact.btn.add_supplier'|trans }}
            </a>
        </li>
        <li>
            <a class="loading-btn" href="{{ path('morus_accetic_contacts_new_employee') }}">
                {% image '@MorusAcceticBundle/Resources/public/images/icons-pack.png' %}
                <em class="icons add icon" style="background:url('{{ asset_url }}') no-repeat;background-position:0 -50px;" ></em>
                {% endimage %}
                {{ 'contact.btn.add_employee'|trans }}
            </a>
        </li>
    </ul>

    <div class="fullwidth-space"></div>

    <ul class="page-control">
    <li><a class="simple-btn" href="{{ path('morus_accetic_contacts_list') }}">{{ 'contact.all'|trans }}</a></li>
    <li><a class="simple-btn" href="{{ path('morus_accetic_contacts_list', {'ecc': 'supplier'}) }}">{{ 'contact.suppliers'|trans }}</a></li>
    <li><a class="simple-btn" href="{{ path('morus_accetic_contacts_list', {'ecc': 'customer'}) }}">{{ 'contact.customers'|trans }}</a></li>
    <li><a class="simple-btn" href="{{ path('morus_accetic_contacts_list', {'ecc': 'employee'}) }}">{{ 'contact.employees'|trans }}</a></li>
    </ul>

    <table id="contact-list" class="contact records_list">
        <thead>
            <tr>
                <th class="left">{{ 'contact.display_name'|trans }}</th>
                <th class="left">{{ 'contact.email'|trans }}</th> 
                <th class="left">{{ 'contact.telephone'|trans }}</th> 
                <th class="right">{{ 'ar.new.bills_due'|trans }}</th>
                <th class="right">{{ 'ar.new.overdue_bills'|trans }}</th>
                <th class="right">{{ 'ar.new.sales_invoices_due'|trans }}</th>
                <th class="right">{{ 'ar.new.overdue_sales_invoices'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td class="left"><a href="{{ path('morus_accetic_contacts_show', { 'id': entity.id }) }}">{{ entity.name }}</a></td>
                <td class="left">{{ entity.email }}</td>
                <td class="left">{{ entity.telephone }}</td>
                <td class="right"></td>
                <td class="right"></td>
                <td class="right"></td>
                <td class="right"></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
